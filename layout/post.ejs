<div class="ui grid container">
    <div class="row">
        <div class="ui basic segment">
            <h1 class="ui header">
                <%- page.title %>
            </h1>
            <span><%- date(page.date) %></span>
        </div>
    </div>

    <div class="row" id="article">
        <div class="eleven wide column">
                <%- page.content %>
            <div class="ui basic segment">
                <div class="ui basic circular huge button">
                    <a href="#">Previous</a>
                </div>
                <div class="ui basic circular huge button">
                    <a href="#">Next</a>
                </div>
            </div>
        </div>
        <div class="four wide right floated column">
            <div class="ui secondary segment">
                <h4 class="ui header">
                    About
                </h4>
                <p>
                    Etiam porta <i>sem malesuada magna mollis euismod</i>. Cras mattis consectetur purus sit amet
                    fermentum. Aenean lacinia bibendum nulla sed consectetur.
                </p>
            </div>
            <h4 class="ui header">
                Archives
            </h4>
            <div class="ui list">
                <%- list_categories() %>
                <%- toc(page.content) %>
            </div>
            <div class="ui hidden divider"></div>
            <h4 class="ui header">
                Elsewhere
            </h4>
            <div class="ui list">
                <a class="item">GitHub</a><a class="item">Twitter</a><a class="item">Google+</a><a class="item">Facebook</a>
            </div>
        </div>
    </div>
</div>